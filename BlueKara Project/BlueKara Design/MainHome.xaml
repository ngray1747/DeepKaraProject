<Controls:MetroWindow x:Class="BlueKara_Design.MainHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         
    xmlns:mdi="clr-namespace:WPF.MDI;assembly=WPF.MDI"
        xmlns:phicontrol="clr-namespace:BlueKara_Design.UseControl"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BlueKara_Design"
        mc:Ignorable="d"
       Icon="Image/micro.png"
        Title="MainHome" WindowStartupLocation="CenterScreen" ResizeMode="CanMinimize" Height="720" Width="1350">
    <Window.Resources>

    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Image/triangular1.jpg"></ImageBrush>
        </Grid.Background>


        <Grid.RowDefinitions>
            <RowDefinition Height="92*"/>
            <RowDefinition Height="599*"/>

        </Grid.RowDefinitions>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="2" VerticalAlignment="Top" Width="1344" RenderTransformOrigin="0.5,0.5" Grid.Row="1">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <Controls:ToggleSwitch Foreground="Black" Header="Chuyển Chế Độ Karaoke" OnLabel="Hát ONLINE" OffLabel="Hát OFFLINE" Margin="10,10,1157,18"  OnSwitchBrush="#CCFF0000" />
        <Image x:Name="image" Source="Image/intro.png" HorizontalAlignment="Left" Height="108" Margin="412,-16,0,0" VerticalAlignment="Top" Width="605"/>
        <Image x:Name="image1" Cursor="Hand" ToolTip="Thay đổi ảnh đại diện" Source="Image/My photo on Jobs HoilydayEdit.jpg" HorizontalAlignment="Left" Height="62" Margin="1072,5,0,0" VerticalAlignment="Top" Width="83"/>
        <Label x:Name="label" FontStyle="Italic" FontSize="15" Content="tuonglaivinhhang1" HorizontalAlignment="Left" Margin="1178,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.265,0.633" Width="152"/>
        <Label x:Name="label_Copy1" Foreground="Black"  FontStyle="Italic" FontSize="15" Content="Level 2" HorizontalAlignment="Left" Margin="1178,29,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.523,1.5" Height="28" Width="78"/>
        <Controls:MetroProgressBar Foreground="Yellow"  Name="progress" HorizontalAlignment="Left" Value="400" Maximum="1000" Margin="1178,57,0,0" VerticalAlignment="Top" Width="128" Height="17"  Background="White" BorderBrush="#FFF9F9F9" RenderTransformOrigin="0.234,0.588"/>
        <Image x:Name="image2" Source="Image/online.ico" HorizontalAlignment="Left" Height="15" Margin="1160,20,0,0" VerticalAlignment="Top" Width="23"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="1218,57,94,18" TextWrapping="Wrap" Text="{Binding ElementName=progress,Path=Value,StringFormat={}{0:0} /}" VerticalAlignment="Center" Width="32" Height="17" RenderTransformOrigin="0.703,0.529"/>
        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Center" Margin="1250,57,62,18" TextWrapping="Wrap" Text="{Binding Maximum, ElementName=progress}" VerticalAlignment="Center" Width="32" Height="17"/>

        <Controls:Tile Cursor="Hand" FontSize="12" Margin="1072,69,229,6" Content="Profile" Height="Auto" Width="Auto" Click="OpenFlyout"/>
        <Controls:Tile Cursor="Hand" FontSize="12" Margin="1115,69,189,6" Content="Logout" Height="Auto" Width="Auto"/>
        <Image x:Name="image1_Copy" Source="Logo2.png" HorizontalAlignment="Left" Height="53" Margin="769,5,0,0" VerticalAlignment="Top" Width="76"/>
        <Border BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" Height="2" VerticalAlignment="Top" Width="1353" RenderTransformOrigin="0.5,0.5" Grid.Row="1" Margin="-2,404,-7,0">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
        <DataGrid FontFamily="piron"  AutoGenerateColumns="False"  x:Name="dataGrid" Background="Transparent" HorizontalAlignment="Left" Margin="0,55,-6,0" Grid.Row="1" VerticalAlignment="Top" Width="1350" Height="345">
            <DataGrid.Columns>
                <DataGridTextColumn Header="      Mã Số" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="                                                       Tên Bài Hát" Width="450"></DataGridTextColumn>
                <DataGridTextColumn Header="                      Ca Sĩ" Width="200" ></DataGridTextColumn>
                <DataGridTextColumn Header="                  Nhạc Sĩ" Width="200"></DataGridTextColumn>
                <DataGridTextColumn Header="              Ngày Cập Nhật" Width="210"></DataGridTextColumn>
                <DataGridTextColumn Header="                 Thể Loại" Width="189"></DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>

        <!--chạy chữ wpf-->
        <StackPanel Orientation="Horizontal" x:Name="stack">
            <StackPanel.Resources>
                <local:NegatingConverter x:Key="NegatingConverter" />
                <Storyboard x:Key="slide">
                    <DoubleAnimation From="0" To="{Binding Width, ElementName=canvas, Converter={StaticResource NegatingConverter}}" Duration="00:00:11"
                      Storyboard.TargetProperty="X"
                      Storyboard.TargetName="transferCurreny"
                      RepeatBehavior="Forever"/>
                </Storyboard>
            </StackPanel.Resources>
            <StackPanel.RenderTransform>
                <TranslateTransform x:Name="transferCurreny" X="0"/>
            </StackPanel.RenderTransform>
            <StackPanel.Triggers>
                <EventTrigger RoutedEvent="StackPanel.Loaded">
                    <BeginStoryboard Storyboard="{StaticResource slide}" />
                </EventTrigger>
                <EventTrigger RoutedEvent="StackPanel.SizeChanged">
                    <BeginStoryboard Storyboard="{StaticResource slide}" />
                </EventTrigger>
            </StackPanel.Triggers>
            <Canvas x:Name="canvas"  Width="1342">

                <TextBlock FontFamily="piron" Text="Các bạn đang hát ca khúc" FontSize="25" Canvas.Left="1278" Canvas.Top="108"/>
                <TextBlock FontFamily="piron" Text="Căn Nhà Màu Tím" Foreground="Red" FontStyle="Italic" FontSize="25" Canvas.Left="1634" Canvas.Top="108"/>
            </Canvas>
        </StackPanel>
        <TextBox x:Name="textBox" Foreground="Red" FontSize="17"  HorizontalAlignment="Left" Height="50" Margin="0,5,0,0" Grid.Row="1" TextWrapping="Wrap"  VerticalAlignment="Top" Width="658" Controls:TextBoxHelper.UseFloatingWatermark="True" Controls:TextBoxHelper.Watermark="Gõ từ khóa tìm kiếm và nhấn Enter"/>
        <Image x:Name="image3" Source="Image/search.png" HorizontalAlignment="Left" Height="50" Margin="610,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="48"/>
        <Label x:Name="label1" Visibility="Visible" FontSize="20"  FontStyle="Italic" FontFamily="piron" Content="Danh sách bài hát đang đợi phát" HorizontalAlignment="Left" Margin="208,405,0,0" Grid.Row="1" VerticalAlignment="Top" Width="341" Height="32"/>
        <DataGrid x:Name="dataGrid1" Visibility="Visible" Background="Transparent"  FontFamily="piron"  HorizontalAlignment="Left" Margin="0,437,0,0" Grid.Row="1" VerticalAlignment="Top" Height="162" Width="706">
            <DataGrid.Columns>
                <DataGridTextColumn Header="      Mã Số" Width="100"></DataGridTextColumn>
                <DataGridTextColumn Header="                                                       Tên Bài Hát" Width="450"></DataGridTextColumn>
                <DataGridTextColumn Header="                 Thể Loại" Width="189"></DataGridTextColumn>
            </DataGrid.Columns>


        </DataGrid>
        <ComboBox FontSize="18" x:Name="comboBox" HorizontalAlignment="Left" SelectedIndex="0" Margin="490,5,0,0" Grid.Row="1" VerticalAlignment="Top" Width="120" Height="50">
            <ComboBoxItem FontSize="18" Content="Tiêu Đề"></ComboBoxItem>
            <ComboBoxItem FontSize="18" Content="Thể Loại"></ComboBoxItem>
        </ComboBox>
        <Border Visibility="Visible" BorderBrush="Green" BorderThickness="2.5" HorizontalAlignment="Left" Height="162" Margin="0,437,0,0" Grid.Row="1" VerticalAlignment="Top" Width="706"/>

        <!--<mdi:MdiContainer Visibility="Visible"  Name="AreaControl" Background="Silver" Theme="Aero" DockPanel.Dock="Top" Margin="930,405,109,0" Height="190" Width="300"  Grid.Row="1" />-->
        <phicontrol:VideoPlayer IsEnabled="True" Visibility="Visible" x:Name="videoplayer"   Grid.RowSpan="2" Margin="0,0,0,-7" MouseDoubleClick="ChangeSizeWindow"/>
        <!--<phicontrol:FacebbokPost  Visibility="Visible" Margin="231,10,214,141" Grid.Row="1" />
        <phicontrol:Scored Visibility="Visible" Grid.RowSpan="2" Margin="0,0,0,-7"></phicontrol:Scored>-->

        <Controls:Flyout Name="FlyoutInfo" IsOpen="False"    Header="Thông Tin Cá Nhân" Foreground="White" Background="#6ECFF0" Position="Right"   Width="795" Grid.RowSpan="2" >
            <Grid>
                <GroupBox x:Name="groupBox" Background="#CC8D1313"  Header="Thông Tin Cố Định" HorizontalAlignment="Left" Margin="0,10,0,0" VerticalAlignment="Top" Width="795" Height="125">
                    <Grid>
                        <Label Foreground="Black" x:Name="label2" Content="Email" FontSize="15" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Width="54"/>
                        <TextBlock x:Name="textBlock1" FontFamily="piron" Foreground="Black" Padding="3" FontSize="15" FontStyle="Italic" HorizontalAlignment="Left" Margin="202,10,0,0" TextWrapping="Wrap" Text="tuonglaivinhhang1@gmail.com" VerticalAlignment="Top" Height="30" Width="333"/>
                        <Label Foreground="Black" x:Name="label3" Content="Username" FontSize="15" HorizontalAlignment="Left" Margin="10,46,0,0" VerticalAlignment="Top" Width="76"/>
                        <TextBlock x:Name="textBlock2" FontFamily="piron" Foreground="Black" Padding="3" FontSize="15" FontStyle="Italic" HorizontalAlignment="Left" Margin="202,45,0,0" TextWrapping="Wrap" Text="tuonglaivinhhang1" VerticalAlignment="Top" Height="30" Width="333"/>
                        <Label Foreground="Black" x:Name="scorelabel" Content="Điểm" FontSize="15" HorizontalAlignment="Left" Margin="568,11,0,0" VerticalAlignment="Top" Width="53"/>
                        <Label Foreground="Black" x:Name="levellabel" Content="Level" FontSize="15" HorizontalAlignment="Left" Margin="568,46,0,0" VerticalAlignment="Top" Width="53"/>
                        <TextBlock Margin="626,11,58,46" Foreground="Black" FontFamily="piron" FontStyle="Italic" Padding="5" Text="400" FontSize="15"></TextBlock>
                        <TextBlock Margin="626,46,58,11" Foreground="Black" FontFamily="piron" FontStyle="Italic" Padding="5" Text="2" FontSize="15"></TextBlock>

                    </Grid>

                </GroupBox>

                <GroupBox Background="#CC8D1313" Header="Thông Tin Thay Đổi" Margin="0,140,0,71">
                    <Grid>
                        <Label Foreground="Black" x:Name="textBlock3" FontSize="15" HorizontalAlignment="Left" Margin="10,22,0,0"  Content="Họ Tên" VerticalAlignment="Top" Width="76"/>
                        <TextBox FontStyle="Italic" CaretBrush="Black"  Foreground="Black" Background="White" x:Name="textBox1" FontSize="15" FontFamily="piron" HorizontalAlignment="Left" Height="30" Margin="204,22,0,0" TextWrapping="Wrap" Text="Nguyễn Thanh Phi" VerticalAlignment="Top" Width="246"/>
                        <Label Foreground="Black" x:Name="label4" FontSize="15" Content="Số Điện Thoại" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="115"/>
                        <TextBox FontStyle="Italic" CaretBrush="Black" Foreground="Black" Background="White" x:Name="textBox2" FontSize="15" FontFamily="piron" HorizontalAlignment="Left" Height="30" Margin="204,67,0,0" TextWrapping="Wrap" Text="01265190526" VerticalAlignment="Top" Width="246"/>
                        <Label Foreground="Black" x:Name="label5" FontSize="15" Content="Nghề Nghiệp" HorizontalAlignment="Left" Margin="10,114,0,0" VerticalAlignment="Top" Width="101"/>
                        <TextBox FontStyle="Italic" CaretBrush="Black" Foreground="Black" Background="White" x:Name="textBox3" FontSize="15" FontFamily="piron" HorizontalAlignment="Left" Height="30" Margin="204,114,0,0" TextWrapping="Wrap" Text="Sinh Viên" VerticalAlignment="Top" Width="246"/>
                        <Label Foreground="Black" x:Name="label6" FontSize="15" Content="Ngày Sinh" HorizontalAlignment="Left" Margin="10,158,0,0" VerticalAlignment="Top" Width="101"/>
                        <DatePicker Name="pickdate" Text="04/01/1996"   FontSize="15" FontStyle="Italic" FontFamily="piron" Background="White" Foreground="Black"  Margin="423,158,333,178"></DatePicker>
                        <Label Foreground="Black" x:Name="label7" FontSize="15" Content="Link Facebook" HorizontalAlignment="Left" Margin="10,203,0,0" VerticalAlignment="Top" Width="115"/>
                        <TextBox Background="White"  CaretBrush="Black" FontSize="15" Foreground="Blue" FontStyle="Italic" TextDecorations="Underline" Margin="204,203,58,133" Text="https://www.facebook.com/InnerPeace.Windy"/>

                        <Label Foreground="Black"  x:Name="label8" FontSize="15" Content="Nhập Mật Khẩu Mới" HorizontalAlignment="Left" Margin="10,247,0,0" VerticalAlignment="Top" Width="156"/>
                        <PasswordBox  Background="White" CaretBrush="Black" FontSize="15" Foreground="Black" Margin="204,247,333,89"></PasswordBox>

                        <Label Foreground="Black"  x:Name="label9" FontSize="15" Content="Nhập Lại Mật Khẩu Mới" HorizontalAlignment="Left" Margin="10,291,0,0" VerticalAlignment="Top" Width="168"/>
                        <PasswordBox Background="White" CaretBrush="Black" FontSize="15" Foreground="Black" Margin="204,291,333,0" Height="30" VerticalAlignment="Top"></PasswordBox>
                        <Label Foreground="Black" FontStyle="Italic"  x:Name="label10" FontSize="15" Content="Nhập Mật Khẩu Hiện Tại (*)" HorizontalAlignment="Left" Margin="10,336,0,0" VerticalAlignment="Top" Width="194"/>
                        <PasswordBox Background="White" CaretBrush="Black" FontSize="15" Foreground="Black" Margin="204,336,333,0"></PasswordBox>
                        <TextBox x:Name="textBox4" Background="White" Foreground="Black" IsReadOnly="True" CaretBrush="Black" FontSize="15" FontFamily="piron" Text="{Binding Text,ElementName=pickdate}" HorizontalAlignment="Left" Height="30" Margin="204,158,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="219"/>


                    </Grid>
                </GroupBox>
                <Button Content="Hủy Bỏ" FontSize="15" Controls:ControlsHelper.ContentCharacterCasing="Normal" Margin="507,563,212,15"></Button>
                <Button Content="Đồng Ý" FontSize="15" Margin="288,563,433,15" Controls:ControlsHelper.ContentCharacterCasing="Normal"></Button>
            </Grid>
        </Controls:Flyout>

        <Button x:Name="closefyout" Style="{DynamicResource MetroCircleButtonStyle}" Background="Transparent" HorizontalAlignment="Left" Margin="563,25,0,0" VerticalAlignment="Top" Width="42" Height="42" Click="CloseFlyout"/>

    </Grid>
</Controls:MetroWindow>
